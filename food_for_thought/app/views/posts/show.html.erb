<center>
  <div class="container">
    <div class="inner">
      <strong><%= @post.title %></strong>

      <%= @post.created_at.to_date %>
      <br>
      <%= @post.content %>
      <% if session[:user_id] == @post.user_id%>
        <%= link_to("Edit", edit_post_path(@post)) %>
        <%= link_to("Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"})%>
      <% end %>
      <br>
      <% @comments.each do |comment| %>
        <%= comment.content %>
        <% if session[:user_id] == comment.user_id%>
          <%= link_to("Edit", edit_post_comment_path(@post, comment)) %>
          <%= link_to("Delete", post_comment_path(@post, comment), method: :delete, data: {confirm: "Are you sure you want to delete this comment?"})%>
        <% end %>
        <br>
      <%end%>
      <br>
    </div>
  </div>
</center>
